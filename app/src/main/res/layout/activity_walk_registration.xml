<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalkRegistrationActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_pet_button"
        android:text="반려동물"
        android:layout_marginBottom="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/pet_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pet_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pet_name"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/select_pet_button"
        app:layout_constraintLeft_toRightOf="@+id/select_pet_button" />

    <EditText
        android:id="@+id/total_walk_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="산책 시간"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/select_pet_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_button"
        android:text="저장"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/total_walk_time"/>

</android.support.constraint.ConstraintLayout>